<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>


<BorderPane fx:controller="com.raphaelcollin.calculator.Controller" id="main" stylesheets="@styles.css"
            xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="30" left="30" right="30" bottom="10"/>
    </padding>
    <top>

            <!-- The main field -->

        <TextField disable="true" text="0" alignment="CENTER_RIGHT" fx:id="textField" id="textArea" prefHeight="30">
            <font>
                <Font size="24" name="Arial Bold"/>
            </font>
        </TextField>
    </top>

    <center>
        <GridPane alignment="TOP_CENTER" hgap="20" vgap="20">
            <BorderPane.margin>
                <Insets top="35.0"/>
            </BorderPane.margin>

                    <!--The rows sense is from top to bottom-->

                <!--Row 0-->

            <Button onAction="#handleCButton" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    styleClass="operators" text="c" prefWidth="50" prefHeight="40" GridPane.rowIndex="0"
                    GridPane.columnIndex="0">
                <font>
                    <Font name="Arial Bold" size="20"/>
                </font>
            </Button>

            <Button onAction="#handleBackSpaceButton" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    styleClass="operators" text="←" prefWidth="50" prefHeight="40" GridPane.rowIndex="0"
                    GridPane.columnIndex="1">
                <font>
                    <Font name="Arial Bold" size="20"/>
                </font>
            </Button>

            <Button onAction="#handleSquareRootButton" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    styleClass="operators" text="√" prefWidth="50" prefHeight="40" GridPane.rowIndex="0"
                    GridPane.columnIndex="2">
                <font>
                    <Font name="Arial Bold" size="20"/>
                </font>
            </Button>

            <Button onAction="#handleOperatorsButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    styleClass="operators" text="÷" prefWidth="50" prefHeight="40" GridPane.rowIndex="0"
                    GridPane.columnIndex="3">
                <font>
                    <Font name="Arial Bold" size="20"/>
                </font>
            </Button>

                <!-- Row 1 -->

            <Button onAction="#handleNumbersButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    text="9" prefWidth="50" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="2">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleNumbersButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    text="8" prefWidth="50" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleNumbersButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    text="7" prefWidth="50" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="0">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleOperatorsButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    styleClass="operators" text="x" prefWidth="50" prefHeight="40"
                    GridPane.rowIndex="1" GridPane.columnIndex="3">
                <font>
                    <Font name="Arial Bold" size="20"/>
                </font>
            </Button>

            <!-- Row 2 -->

            <Button onAction="#handleNumbersButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    text="6" prefWidth="50" prefHeight="40" GridPane.rowIndex="2" GridPane.columnIndex="2">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleNumbersButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    text="5" prefWidth="50" prefHeight="40" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleNumbersButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    text="4" prefWidth="50" prefHeight="40" GridPane.rowIndex="2" GridPane.columnIndex="0">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleOperatorsButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    styleClass="operators" text="-" prefWidth="50" prefHeight="40" GridPane.rowIndex="2"
                    GridPane.columnIndex="3">
                <font>
                    <Font name="Arial Bold" size="20"/>
                </font>
            </Button>

                <!--Row 3-->

            <Button onAction="#handleNumbersButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    text="3" prefWidth="50" prefHeight="40" GridPane.rowIndex="3" GridPane.columnIndex="2">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleNumbersButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    text="2" prefWidth="50" prefHeight="40" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleNumbersButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    text="1" prefWidth="50" prefHeight="40" GridPane.rowIndex="3" GridPane.columnIndex="0">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleOperatorsButtons" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    styleClass="operators" text="+" prefWidth="50" prefHeight="40" GridPane.rowIndex="3"
                    GridPane.columnIndex="3">
                <font>
                    <Font name="Arial Bold" size="20"/>
                </font>
            </Button>

                <!--Row 4-->

            <Button onAction="#handleMoreOrLessButton" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    styleClass="operators"  text="±" prefWidth="50" prefHeight="40"
                    GridPane.rowIndex="4" GridPane.columnIndex="0">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleNumbersButtons" onMouseExited="#handleMouseExit"
                    onMouseEntered="#handleMouseOver" text="0" prefWidth="50"
                        prefHeight="40" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleDotButton" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    styleClass="operators"  text="." prefWidth="50" prefHeight="40" GridPane.rowIndex="4"
                    GridPane.columnIndex="2">
                <font>
                    <Font name="Arial Bold" size="18"/>
                </font>
            </Button>
            <Button onAction="#handleEqualButton" onMouseExited="#handleMouseExit" onMouseEntered="#handleMouseOver"
                    styleClass="operators" id="equal" text="=" prefWidth="50" prefHeight="40"
                    GridPane.rowIndex="4" GridPane.columnIndex="3">
                <font>
                    <Font name="Arial Bold" size="20"/>
                </font>
            </Button>

        </GridPane>
    </center>
</BorderPane>